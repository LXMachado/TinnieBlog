---
import Layout from '../components/Layout.astro';
import Card from '../components/Card.astro';

export interface Props {
  title: string;
  description?: string;
  image?: string;
  publishDate?: string;
}

const { title, description, image, publishDate } = Astro.props;

// Recent posts mock data - in a real implementation, this would come from a CMS or file system
const recentPosts = [
  {
    title: 'Artificial Intelligence Advancements',
    href: '/blog/artificial-intelligence-blog',
  },
  {
    title: 'AI & Web Dev Tutorials',
    href: '/blog/artificial-intelligence-tutorials',
  },
  {
    title: 'Build Your Own AI Chatbot with React',
    href: '/blog/blog-post',
  }
];
---

<Layout title={title} description={description} image={image}>
  <div class="container-custom py-12">
    <div class="max-w-4xl mx-auto">
      <article class="prose prose-lg dark:prose-invert prose-headings:font-orbitron prose-a:text-primary mx-auto">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-orbitron font-bold mb-6 text-gray-900 dark:text-white">
          {title}
        </h1>
        
        {publishDate && (
          <div class="mb-6 text-gray-600 dark:text-gray-400 text-sm flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            {publishDate}
          </div>
        )}
        
        <div>
          <slot />
        </div>
      </article>
    </div>
    
    <div class="mt-16">
      <h2 class="text-2xl font-orbitron font-semibold mb-6 text-gray-900 dark:text-white">
        More Articles
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {recentPosts.map(post => (
          <Card
            title={post.title}
            href={post.href}
            className="h-full flex flex-col"
          >
            <div class="mt-auto pt-4">
              <a 
                href={post.href}
                class="text-primary hover:text-primary/80 font-medium inline-flex items-center"
              >
                Read more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </div>
</Layout>
