---
import Layout from '../components/Layout.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';

const title = "Artificial Intelligence & Web Development Trends";
const description = "Master today's dynamic technological landscape with Tinnie Dev's insights into artificial intelligence and web development trends. Stay ahead in the tech world and unlock your full potential with our expert guidance!";

const featuredPosts = [
  {
    title: "Artificial Intelligence Advancements and Their Impact",
    excerpt: "Stay updated with the latest advancements in artificial intelligence (AI) and explore how it is reshaping the technology landscape.",
    href: "/blog/artificial-intelligence-blog",
    category: "AI"
  },
  {
    title: "Artificial Intelligence & Web Development Tutorials",
    excerpt: "Explore the latest in artificial intelligence and web development with expert tutorials and guides.",
    href: "/blog/artificial-intelligence-tutorials",
    category: "Tutorials"
  },
  {
    title: "Build Your Own AI Chatbot with React and OpenAI API",
    excerpt: "This tutorial guides you through building a smart, conversational chatbot using React and the OpenAI API.",
    href: "/blog/blog-post",
    category: "Tutorial"
  }
];
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-white to-blue-50 dark:from-[#0c1618] dark:to-slate-900 py-20 md:py-32">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center slide-up" style="animation-delay: 0.1s;">
        <h1 class="mb-6 text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white">
          <span class="text-primary">Artificial Intelligence</span> & Web Development Trends
        </h1>
        
        <p class="mb-8 text-lg md:text-xl text-gray-700 dark:text-gray-300">
          {description}
        </p>
        
        <div class="flex flex-wrap gap-4 justify-center">
          <Button href="/blog/artificial-intelligence-blog" variant="primary">
            Explore AI Trends
          </Button>
          <Button href="/blog/artificial-intelligence-tutorials" variant="outline">
            View Tutorials
          </Button>
        </div>
      </div>
    </div>
    
    <!-- Decorative elements -->
    <div class="absolute top-1/3 -left-24 w-72 h-72 bg-primary/10 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 -right-32 w-80 h-80 bg-blue-400/10 rounded-full blur-3xl"></div>
  </section>
  
  <!-- Featured Posts Section -->
  <section class="section bg-gray-50 dark:bg-[#0c1618]/80">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Content</h2>
        <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Discover our most popular articles and tutorials on artificial intelligence and web development.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredPosts.map((post, index) => (
          <div class="slide-up" style={`animation-delay: ${0.1 + index * 0.1}s`}>
            <Card 
              title={post.title}
              href={post.href} 
              hasLink={true}
            >
              <span class="inline-block bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium mb-4">
                {post.category}
              </span>
              <p class="text-gray-600 dark:text-gray-400">{post.excerpt}</p>
            </Card>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Join Community CTA -->
  <section class="section bg-white dark:bg-[#0c1618]">
    <div class="container-custom">
      <div class="glass p-8 md:p-12 rounded-2xl max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Join Our Tech Community</h2>
        <p class="text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
          Connect with like-minded developers and AI enthusiasts. Share ideas, learn from others, and stay at the forefront of technology trends.
        </p>
        <Button href="/about" variant="primary">Learn More About Us</Button>
      </div>
    </div>
  </section>
</Layout>