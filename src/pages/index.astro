---
import Layout from '../components/Layout.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';

const featuredPosts = [
  {
    title: 'Artificial Intelligence Advancements and Their Impact',
    description: 'Stay updated with the latest advancements in artificial intelligence (AI) and explore how it is reshaping the technology landscape.',
    href: '/blog/artificial-intelligence-blog',
  },
  {
    title: 'Artificial Intelligence & Web Development Tutorials',
    description: 'Explore the latest in artificial intelligence and web development with expert tutorials and guides.',
    href: '/blog/artificial-intelligence-tutorials',
  },
  {
    title: 'Build Your Own AI Chatbot with React and OpenAI API',
    description: 'This tutorial guides you through building a smart, conversational chatbot using React and the OpenAI API.',
    href: '/blog/blog-post',
  },
];

---

<Layout 
  title="Artificial Intelligence & Web Development Trends | Tinnie Dev"
  description="Master today's dynamic technological landscape with Tinnie Dev's insights into artificial intelligence and web development trends. Stay ahead in the tech world and unlock your full potential with our expert guidance!"
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-accent/10 dark:from-primary/5 dark:to-primary/20 z-0"></div>
    
    <div class="container-custom relative z-10 py-20 md:py-32">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="fade-in" style="animation-delay: 0.1s;">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-orbitron font-bold mb-6 text-gray-900 dark:text-white">
            Artificial Intelligence & Web Development <span class="text-primary">Trends</span>
          </h1>
          
          <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 mb-8">
            Master today's dynamic technological landscape with Tinnie Dev's insights into artificial intelligence and web development trends. Stay ahead in the tech world and unlock your full potential with our expert guidance!
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <Button href="/blog/artificial-intelligence-blog" variant="primary" size="lg">
              Explore AI Blog
            </Button>
            <Button href="/about" variant="outline" size="lg">
              About Us
            </Button>
          </div>
        </div>
        
        <div class="glass p-8 rounded-xl slide-in-right" style="animation-delay: 0.3s;">
          <div class="relative">
            <div class="absolute -inset-0.5 bg-gradient-to-r from-primary to-accent opacity-30 rounded-lg blur"></div>
            <div class="relative glass p-6 rounded-lg">
              <h3 class="text-2xl font-orbitron font-semibold mb-4 text-primary">Latest in Tech</h3>
              <ul class="space-y-4">
                <li class="flex items-start">
                  <div class="flex-shrink-0 h-6 w-6 text-primary mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <p class="text-gray-800 dark:text-gray-200">AI-powered development tools revolutionizing coding</p>
                </li>
                <li class="flex items-start">
                  <div class="flex-shrink-0 h-6 w-6 text-primary mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <p class="text-gray-800 dark:text-gray-200">Modern web frameworks and the JAMstack revolution</p>
                </li>
                <li class="flex items-start">
                  <div class="flex-shrink-0 h-6 w-6 text-primary mr-2">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <p class="text-gray-800 dark:text-gray-200">Machine learning models that can write production-ready code</p>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Blog Posts -->
  <section class="py-20 bg-gray-50 dark:bg-[#0a1214]">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-orbitron font-bold mb-4 text-gray-900 dark:text-white">
          Featured Articles
        </h2>
        <p class="text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
          Explore our latest articles on artificial intelligence, web development, and cutting-edge tech trends.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {featuredPosts.map((post, index) => (
          <Card 
            title={post.title}
            body={post.description}
            href={post.href}
            className="h-full flex flex-col slide-up"
            style={`animation-delay: ${0.1 + index * 0.1}s`}
          >
            <div class="mt-auto pt-4">
              <a 
                href={post.href}
                class="text-primary hover:text-primary/80 font-medium inline-flex items-center"
              >
                Read article
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20">
    <div class="container-custom">
      <div class="relative overflow-hidden rounded-2xl">
        <div class="absolute inset-0 bg-gradient-to-r from-primary to-primary/60 z-0"></div>
        
        <div class="relative z-10 px-8 py-16 md:p-16 text-white">
          <div class="max-w-3xl">
            <h2 class="text-3xl md:text-4xl font-orbitron font-bold mb-6">
              Join Our Tech Community
            </h2>
            <p class="text-lg md:text-xl opacity-90 mb-8">
              Stay updated with the latest in AI and web development. Join our vibrant community of tech enthusiasts and unlock your full potential.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <Button href="/about" variant="outline" size="lg" className="bg-white text-primary border-white hover:bg-white/90">
                Learn More
              </Button>
              <Button href="/contact" variant="primary" size="lg" className="bg-white text-primary border-white hover:bg-white/90">
                Contact Us
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>