---
import Layout from '../components/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
import Card from '../components/Card.astro';

const contactMethods = [
  {
    title: 'Email',
    description: 'Send us an email and we\'ll get back to you within 24 hours.',
    email: 'hello@tinniedev.com',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>`,
  },
  {
    title: 'Twitter',
    description: 'Follow us and send a direct message on Twitter for quick responses.',
    username: '@tinniedev',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" /></svg>`,
  },
  {
    title: 'GitHub',
    description: 'Check out our open-source projects and contribute to our code.',
    username: 'tinniedev',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.605-3.369-1.343-3.369-1.343-.454-1.155-1.11-1.462-1.11-1.462-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.268 2.75 1.026A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.026 2.747-1.026.546 1.377.202 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.841-2.337 4.687-4.565 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.166 22 16.418 22 12c0-5.523-4.477-10-10-10z" /></svg>`,
  },
];

const faqs = [
  {
    question: 'How can I contribute to Tinnie Dev?',
    answer: 'We welcome contributions! You can submit guest articles, suggest topics, report issues, or contribute to our open-source projects on GitHub.'
  },
  {
    question: 'Do you offer consulting services?',
    answer: 'Yes, our team offers consulting services in AI implementation, web development, and tech strategy. Contact us with details about your project for more information.'
  },
  {
    question: 'How often do you publish new content?',
    answer: 'We publish new articles and tutorials weekly, focusing on the latest trends and technologies in AI and web development.'
  },
  {
    question: 'Can I use your code samples in my projects?',
    answer: 'Yes, all code samples on our blog are available under MIT license unless otherwise specified. Feel free to use them in your projects!'
  },
];
---

<Layout 
  title="Contact Our Team for AI News & Tech Insights | Tinnie Dev"
  description="Reach out to our dedicated team via the contact form on our page to inquire about AI news, technology insights, and software development updates. Join our vibrant community today!"
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-accent/10 dark:from-primary/5 dark:to-primary/20 z-0"></div>
    
    <div class="container-custom relative z-10 py-20 md:py-32">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-orbitron font-bold mb-6 text-gray-900 dark:text-white">
          Contact Our Team
        </h1>
        
        <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 mb-8">
          Reach out to our dedicated team to inquire about AI news, technology insights, and software development updates. Join our vibrant community today!
        </p>
      </div>
    </div>
  </section>
  
  <!-- Contact Methods -->
  <section class="py-20">
    <div class="container-custom">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-16">
        {contactMethods.map((method, index) => (
          <Card className="h-full flex flex-col items-center text-center p-8 slide-up" style={`animation-delay: ${0.1 + index * 0.1}s`}>
            <div class="text-primary mb-4" set:html={method.icon} />
            <h3 class="text-xl font-orbitron font-semibold mb-3">{method.title}</h3>
            <p class="text-gray-700 dark:text-gray-300 mb-4">{method.description}</p>
            {method.email && (
              <a href={`mailto:${method.email}`} class="text-primary hover:text-primary/80">
                {method.email}
              </a>
            )}
            {method.username && (
              <a href="#" class="text-primary hover:text-primary/80">
                {method.username}
              </a>
            )}
          </Card>
        ))}
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        <div class="slide-up" style="animation-delay: 0.1s;">
          <h2 class="text-3xl font-orbitron font-bold mb-6 text-gray-900 dark:text-white">
            Send Us a Message
          </h2>
          
          <p class="text-gray-700 dark:text-gray-300 mb-8">
            Have a question, suggestion, or want to collaborate? Fill out the form below and we'll get back to you as soon as possible.
          </p>
          
          <ContactForm />
        </div>
        
        <div class="glass p-8 rounded-xl slide-in-right" style="animation-delay: 0.3s;">
          <h2 class="text-2xl font-orbitron font-bold mb-6 text-gray-900 dark:text-white">
            Frequently Asked Questions
          </h2>
          
          <div class="space-y-6">
            {faqs.map((faq, index) => (
              <div class="border-b border-gray-200 dark:border-gray-700 pb-6 last:border-0">
                <h3 class="text-lg font-orbitron font-semibold mb-2 text-gray-900 dark:text-white">
                  {faq.question}
                </h3>
                <p class="text-gray-700 dark:text-gray-300">
                  {faq.answer}
                </p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Office Location (Optional) -->
  <section class="py-20 bg-gray-50 dark:bg-[#0a1214]">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-orbitron font-bold mb-4 text-gray-900 dark:text-white">
          Our Community Reach
        </h2>
        <p class="text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto">
          While we operate primarily online, our community spans across the globe, connecting tech enthusiasts from all backgrounds.
        </p>
      </div>
      
      <div class="glass p-8 rounded-xl">
        <div class="flex flex-col md:flex-row items-center gap-8">
          <div class="flex-1 text-center md:text-left">
            <h3 class="text-xl font-orbitron font-semibold mb-3 text-gray-900 dark:text-white">
              Join Our Global Network
            </h3>
            <p class="text-gray-700 dark:text-gray-300 mb-4">
              From San Francisco to Singapore, our community members collaborate, share knowledge, and build connections that transcend geographical boundaries.
            </p>
            <p class="text-gray-700 dark:text-gray-300">
              No matter where you are located, you can become part of our thriving tech ecosystem. Connect with like-minded individuals who share your passion for innovation and learning.
            </p>
          </div>
          <div class="flex-1">
            <div class="bg-primary/10 dark:bg-primary/20 rounded-lg p-8 flex items-center justify-center">
              <div class="text-primary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h.5A2.5 2.5 0 0020 5.5v-1.565M12 21.5V20a2 2 0 01-2-2v-.5a2 2 0 00-2-2 2 2 0 01-2-2v-3a2 2 0 01.115-.7M18.512 7.705L20 9.5l-1.488 1.795M8.512 15.705L7 17.5l1.512 1.795" />
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
