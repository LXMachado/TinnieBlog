---
import Layout from '../components/Layout.astro';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';

const teamMembers = [
  {
    name: 'Alex Morgan',
    role: 'Founder & AI Specialist',
    bio: 'Alex has over 10 years of experience in AI research and development, focusing on natural language processing and machine learning applications.',
  },
  {
    name: 'Sam Chen',
    role: 'Web Development Lead',
    bio: 'Sam is a full-stack developer with expertise in modern web frameworks, serverless architecture, and building scalable applications.',
  },
  {
    name: 'Jordan Lee',
    role: 'Technical Content Writer',
    bio: 'Jordan specializes in creating comprehensive technical content that makes complex concepts accessible to developers of all skill levels.',
  },
];

